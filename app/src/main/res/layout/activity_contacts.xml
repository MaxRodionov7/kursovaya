<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C8CE3"
    tools:context="com.example.kursovaya.activity_hot_tours">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/andika"
        android:lineSpacingExtra="34sp"
        android:text="Наши контакты:"
        android:textAllCaps="false"
        android:textColor="@color/notallwhite"
        android:textSize="16sp"
        android:typeface="normal" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/andika"
        android:lineSpacingExtra="34sp"
        android:text="+79269836493 - Отдел продаж"
        android:textAllCaps="false"
        android:textColor="@color/notallwhite"
        android:textSize="16sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="70sp"
        android:fontFamily="@font/andika"
        android:lineSpacingExtra="34sp"
        android:text="+79992345829 - Отдел оформления"
        android:textAllCaps="false"
        android:textColor="@color/notallwhite"
        android:textSize="16sp"
        android:typeface="normal" />

    <LinearLayout
        android:id="@+id/tail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/notallwhite"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:minHeight="50dp"
            android:onClick="Back"
            app:srcCompat="@drawable/ic_action_back"
            app:tint="@color/icons" />


    </LinearLayout>




</RelativeLayout>